                        "config name=store_papi path=/db/sos",
                        "prdcr_start_regex regex=.*",
                        "strgp_add name=papi_strgp plugin=store_papi" \
                                 " container=papi schema=papi",
                        "strgp_prdcr_add name=papi_strgp regex=.*",
                        "strgp_start name=papi_strgp",
